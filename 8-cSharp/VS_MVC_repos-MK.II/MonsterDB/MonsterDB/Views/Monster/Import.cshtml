@*@model MonsterDB.Models.Monster*@

@{
    ViewBag.Title = "Import";
}



<h2>Import</h2>
<h4>Add Monsters via Excel</h4>

@using (Html.BeginForm("Import", "Monster", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
<div class="form-horizontal">

    <div class="form-group">
        <input type="file" id="file" name="file" class="" />
    </div>

    <div class="form-group">
        <input type="submit" value="Upload Excel File" id="SubmitBtn" class="btn-primary" />
    </div>

    @{
        if (ViewBag.Message == "File uploaded successfully")
        {
            @ViewBag.Message
            <meta http-equiv="refresh" content="3; 'Index'" />
        }
        else
        {
            @ViewBag.Message
        }
    }    

</div>

}

    



