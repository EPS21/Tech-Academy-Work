@model IEnumerable<ScheduleUsers.Models.Message>

@{
    ViewBag.Title = "Read Messages";
}

<h3>Read Messages</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateSent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateRead)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MessageTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnreadMessage)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateSent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateRead)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnreadMessage)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MessageID }) |
                @Html.ActionLink("Details", "Details", new { id = item.MessageID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MessageID })
            </td>
        </tr>
    }

</table>
